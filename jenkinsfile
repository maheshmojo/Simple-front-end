stage{
            agent{
                label 'master'
            }
            tools {
                nodejs "nodejs"
            }
            stages{
                stage("Checkout from SCM"){
                    steps{
                        git branch: 'Master-main', url: 'https://github.com/maheshmojo/Simple-front-end.git'
                    }
                }
                stage("Build Stage"){
                    steps{
                        bat "npm install"
                        bat "docker build --rm -t front-end-app-master ."
                    }
                }
                stage("Code Quality Checks"){
                    steps{
                        bat "npm install --save-dev sonar-scanner"
                        bat "npm run sonar"
                        bat "npm run build"
                    }
                }
                stage("Upload artifact image to nexus repositry"){
                    steps{
                       bat "docker tag front-end-app-master 192.168.33.10:8123/front-end-app:MASTER${env.BUILD_ID}"
                       bat "docker login -u docker -p admin@123 192.168.33.10:8123"
                       bat "docker push 192.168.33.10:8123/front-end-app:MASTER${env.BUILD_ID}"
                    }
                }
                stage("Deploy To Master-SERVER"){
                    agent{
                        label 'Master-Production'
                    }
                    steps{
                        sh """#!/bin/bash 
				
				sudo docker container rm -f front-end-app
				sudo docker pull 192.168.33.10:8123/front-end-app:MASTER${env.BUILD_ID}
				sudo docker run --name front-end-app -p 4200:80 --link simple-back-end -d 192.168.33.10:8123/front-end-app:MASTER${env.BUILD_ID}
				
				"""   
                    }
                }
            }
            
        }
